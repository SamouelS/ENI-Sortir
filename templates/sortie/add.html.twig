{% extends 'base.html.twig' %}
{% block navbar %}
    {% include "inc/navbar.html.twig" %}
{% endblock %}
{% block title %}
	Ajouter une sortie
{% endblock %}
{% block header %}
	{% include "inc/header.html.twig" %}
{% endblock %}
{% block content %}
    {{ form_start(form) }}
	<div class="form-group">
		<label for="sortie_nom" class="required">Nom</label>
		{{ form_widget(form.nom) }}
	</div>

	<fieldset class="form-group">
		<legend class="col-form-label required">Date heure debut</legend>
		{{ form_widget(form.dateHeureDebut) }}
	</fieldset>

	<fieldset class="form-group">
		<legend class="col-form-label required">Duree</legend>
		{{ form_widget(form.duree) }}
	</fieldset>

	<fieldset class="form-group">
		<legend class="col-form-label required">Date limite inscription</legend>
		{{ form_widget(form.dateLimiteInscription) }}
	</fieldset>

	<div class="form-group">
		<label for="sortie_nbInscriptionsMax" class="required">Nb inscriptions max</label>
		{{ form_widget(form.nbInscriptionsMax) }}
	</div>

	<div class="form-group">
		<label for="sortie_infosSortie">Infos sortie</label>
		{{ form_widget(form.infosSortie) }}
	</div>

	<div class="form-group">
		<label class="required" for="sortie_lieu">Lieu</label>
		{{ form_widget(form.lieu) }}
		<a class="btn btn-secondary mt-2" href="{{ path("lieu_add") }}">Ajouter un lieu</a>
	</div>

	<div class="form-group">
		<label class="required" for="sortie_campus">Campus</label>
		{{ form_widget(form.campus) }}
	</div>

	<button class="btn btn-primary" type="submit">Ajouter</button>
	{{ form_end(form) }}
{% endblock %}